<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="ThemeOverlayButton" parent="ThemeOverlay.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EndDialogTitle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_out</item>
        <item name="android:windowExitAnimation">@anim/fade_in</item>
    </style>


    <style name="TwitterEdit" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/twitter</item>
        <item name="colorControlActivated">@color/twitter</item>
        <item name="colorControlHighlight">@color/twitter</item>
    </style>


</resources>