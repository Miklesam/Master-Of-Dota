<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#001a13">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />


    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_game"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_game"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:theme="@style/ThemeOverlayButton"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_game_bttn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/new_game"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:theme="@style/ThemeOverlayButton"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toBottomOf="@+id/continue_game"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/achivments"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/achivments"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:theme="@style/ThemeOverlayButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_game_bttn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LeaderBoard"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:theme="@style/ThemeOverlayButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/achivments" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/market"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Market"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:theme="@style/ThemeOverlayButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/achivments" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>